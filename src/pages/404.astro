---
import PrimaryLayout from '../layouts/PrimaryLayout.astro';

import { Image } from "astro:assets";
import pageNotFoundImg from "../assets/404.webp";

const title = "Page not found";
---

<PrimaryLayout title={title}>
  <div>
    <Image src={ pageNotFoundImg } alt="Photograph of graffiti saying the word Sorry." quality="mid" />
    <h2>Page not found (404)</h2>
      <p>Looks like the page you requested doesn't exist.</p>
      <p><a href="/" class="button">&larr; Back home</a></p>
  </div>
</PrimaryLayout>

<style>
  img {
    margin-bottom: 1rem;

  width: 100%;
  height: auto;
  display: block;
  }
  h2 {
    padding-bottom: 0.5rem;
  }
  p {
    margin-bottom: 2rem;
  }
</style>